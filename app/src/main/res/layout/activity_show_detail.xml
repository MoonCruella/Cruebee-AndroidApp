<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- ImageView with the background image -->
                        <ImageView
                            android:id="@+id/foodImgView"
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            android:layout_gravity="top|center_horizontal"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/comboga_nuoc" />

                        <!-- BlurView over the image, to blur it -->
                        <eightbitlab.com.blurview.BlurView
                            android:id="@+id/blurView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:layout_gravity="bottom|start"
                                android:id="@+id/content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/titleTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="title"
                                    android:fontFamily="@font/fonts_com_merge_bold"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlCompat" />

                                <TextView
                                    android:id="@+id/priceTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="$"
                                    android:fontFamily="@font/fonts_com_merge_bold"
                                    android:textAlignment="center"
                                    android:textColor="@color/red"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/minusImgView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/minus"/>

                    <TextView
                        android:id="@+id/countTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20sp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:paddingHorizontal="20dp"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/plusImgView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/plus"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/soldCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã bán "
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/soldIcon"
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:layout_height="16dp"
                        android:tint="@color/green"
                        android:src="@drawable/cartcheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Description for this dish"
                    android:textSize="14sp" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/scrollView2">

            <TextView
                android:id="@+id/addToCartBtt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Thêm vào giỏ"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="18sp"
                android:fontFamily="@font/fonts_com_merge_bold"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/orange_button"
                android:backgroundTint="@color/yellow"
                android:textColor="#ffffff"
                />

            <TextView
                android:id="@+id/checkoutBtt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/red_button"
                android:fontFamily="@font/fonts_com_merge_bold"
                android:gravity="center"
                android:backgroundTint="@color/red"
                android:layout_margin="20dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:text="Thanh toán"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Hiệu ứng blur -->
    <View
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20000000"
        android:fitsSystemWindows="true"
        android:visibility="gone" />
</FrameLayout>