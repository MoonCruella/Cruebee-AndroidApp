<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/errrorConstraintLayout"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:id="@+id/layoutDialog"
        android:background="@drawable/custom_bkg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/errorText"
            android:background="@drawable/custom_red_bkg"
            android:text="Không được rồi!"
            android:padding="12dp"
            android:fontFamily="@font/fonts_nunito_black"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            app:tint = "@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/errorText"
            app:layout_constraintBottom_toBottomOf="@id/errorText"
            android:id="@+id/errorImage"
            android:src="@drawable/baseline_error_24">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/errorDes"
            android:text="Bạn vui lòng nhập địa chỉ/chọn cửa hàng nhé!"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errorText">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errorClose"
        android:textSize="14sp"
        android:text="OK"
        android:paddingStart="26dp"
        android:paddingEnd="26dp"
        android:textColor="@color/white"
        android:paddingBottom="14dp"
        android:foreground="?attr/selectableItemBackground"
        android:fontFamily="@font/fonts_nunito_black"
        android:paddingTop="14dp"
        android:background="@drawable/red_button"
        android:backgroundTint="@color/red"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/layoutDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutDialog">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>