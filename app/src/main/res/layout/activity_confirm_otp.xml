<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verify_otp_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOTPActivity"
    android:background="@color/red"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts_com_merge_bold"
        android:text="Mã xác thực"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:text="Chúng tôi đã gửi mã xác thực đến email của bạn. Vui lòng nhập mã xác thực để tiếp tục"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input1"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundMode="none"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:hint="Mã xác thực"
            android:background="@drawable/border"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:padding="16dp"
        android:textSize="18sp"
        android:onClick="resendOTP"/>

    <TextView
        android:id="@+id/verify"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/red_button"
        android:text="Tiếp tục"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="12dp"
        android:onClick="verifyOTP"/>



</LinearLayout>