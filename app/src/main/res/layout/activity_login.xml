<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/cruebee_logo"
        android:scaleType="centerCrop"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fonts_com_merge_bold"
        android:text="Đăng nhập"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input1"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundMode="none"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:hint="Email *"
            android:text="nhunguyetpy206@gmail.com"
            android:background="@drawable/border"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:padding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tvError1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Không được để trống"
        android:textColor="@color/yellow"
        android:fontFamily="@font/roboto"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/input1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        android:id="@+id/input2"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundMode="none"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:hint="Mật khẩu *"
            android:text="Munlatrang.04"
            android:background="@drawable/border"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tvError2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Không được để trống"
        android:textColor="@color/yellow"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/input2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/registerBtn"
            android:fontFamily="@font/roboto_bold"
            android:onClick="openRegisterActivity"
            android:text="Đăng kí ngay"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:onClick="openForgotPassActivity"
            android:text="Quên mật khẩu?"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/orange_button"
        android:fontFamily="@font/fonts_com_merge_bold"
        android:gravity="center"
        android:onClick="openHomeActivity"
        android:padding="14dp"
        android:text="Đăng Nhập"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/notLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/orange_button"
        android:fontFamily="@font/fonts_com_merge_bold"
        android:gravity="center"
        android:padding="14dp"
        android:text="Đặt Hàng Không Cần Đăng Nhập"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold">
    </TextView>



</LinearLayout>

